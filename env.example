# 基础配置
NODE_ENV=production
PORT=3000

# 数据库 (MySQL)
DATABASE_URL=mysql://root:password@localhost:3306/agent_eval

# 认证模式 (oauth | local)
# 生产环境推荐 oauth，本地开发或离线部署使用 local
AUTH_MODE=local
# 本地认证模式下的管理员密码 (用户名默认 admin)
LOCAL_ADMIN_PASSWORD=admin123
# 安全相关
# JWT 签名密钥 (随机长字符串)
JWT_SECRET=replace_with_a_secure_random_string_at_least_32_chars
# 数据库敏感字段加密密钥 (随机长字符串，必须 >= 32 字符)
ENCRYPTION_KEY=replace_with_a_secure_random_string_at_least_32_chars

# LLM 评测配置 (LLM-as-a-Judge)
# 可以使用 OpenAI、Azure OpenAI 或兼容接口 (如 vLLM, Ollama)
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-proj-xxxxxx
LLM_MODEL=gpt-4o

# OAuth 配置 (仅当 AUTH_MODE=oauth 时需要)
OAUTH_SERVER_URL=https://oauth.example.com
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=
VITE_APP_ID=agent-eval-platform
VITE_OAUTH_PORTAL_URL=https://portal.example.com
OWNER_OPEN_ID=

# Redis (可选)
REDIS_URL=redis://localhost:6379
